<grammar version="1.0" xml:lang="pl-PL" root="rootRule"
xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">

	<rule id="rootRule">
		<item>
			<ruleref uri="#yes_no" />
			<tag> out.yes_no=rules.latest(); </tag>
		</item>
	</rule>

	<rule id="yes_no">
		<one-of>
			<item>
				tak <tag>out="tak"</tag>
			</item>
			<item>
				nie <tag>out="nie"</tag>
			</item>
		</one-of>
	</rule>
</grammar>