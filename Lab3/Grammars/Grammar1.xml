			<item>
				<item repeat="0-1"> Chce </item>
				<ruleref uri="#brand" />
				<tag> out.brand=rules.latest(); </tag>
				<ruleref uri="#color" />
				<tag> out.color=rules.latest(); </tag>
			</item>
			<item>
				<item repeat="0-1"> Chce </item>
				<ruleref uri="#color" />
				<tag> out.color=rules.latest(); </tag>
				<ruleref uri="#fuel" />
				<tag> out.fuel=rules.latest(); </tag>
			</item>
			<item>
				<item repeat="0-1"> Chce </item>
				<ruleref uri="#brand" />
				<tag> out.brand=rules.latest(); </tag>
